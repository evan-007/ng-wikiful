<!DOCTYPE html>
<html ng-app='ngWikiful'>
<head>
  <title>ng-Wikiful</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <h2>ng-Wikiful</h2>
  <ul class='list-inline'>
    <li><a href="#/" class="btn btn-primary">Home</a></li>
    <li><a href="#/articles" class="btn btn-success">Articles</a></li>
    <li><a href="#/categories" class="btn btn-default">Categories</a></li>
  </ul>
  <div id="sessions" ng-controller="sessionsCtrl" ng-init="checkIfSession()">
    <ul class='list-inline'>
      <li><a href="#/signin" ng-if="!authUser.email" class="btn btn-primary" >Signin</a></li>
      <li><a href="#/signup" ng-if="!authUser.email" class="btn btn-primary">Signup</a></li>
      <li><a href="#/myarticles" ng-if="authUser.email" class="btn btn-primary">My Articles</a></li>
      <li class="btn btn-warning" ng-if="authUser.email" ng-click="signOut();">Signout</li>
    </ul>
   
  </div>
  
  <div ng-view></div>
  
</div>
<link href="http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

<%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
</body>
</html>
